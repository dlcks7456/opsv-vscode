{
  "name": "opsv-snd-editor",
  "displayName": "Opsv S&D Editor",
  "description": "Opensurvey Editor Snippets and shourtCuts",
  "publisher": "Opensurvey-Chuck",
  "icon": "images/icon.png",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/dlcks7456/opsv-vscode.git"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "opsv-snd-editor.copyForEditor",
        "title": "1줄로 복사"
      },
      {
        "command": "opsv-snd-editor.createLabel",
        "title": "label 태그 생성 (순차 적용)"
      },
      {
        "command": "opsv-snd-editor.createLabelWithValue",
        "title": "label 태그 생성 (코드 매칭)"
      },
      {
        "command": "opsv-snd-editor.createOption",
        "title": "option 태그 생성"
      },
      {
        "command": "opsv-snd-editor.createInputTexts",
        "title": "복수 주관식 문자형 HTML 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createInputNumbers",
        "title": "복수 주관식 숫자형 HTML 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createDropdown",
        "title": "<select> Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createArray",
        "title": "`start-end` 포맷을 배열로 변환"
      },
      {
        "command": "opsv-snd-editor.createBoldTag",
        "title": "<b> Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createSpanColorTag",
        "title": "<span> + color Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createSpanBgColorTag",
        "title": "<span> + background color Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.changeBoldFontColor",
        "title": "글자 색상 변경"
      },
      {
        "command": "opsv-snd-editor.changeBgColor",
        "title": "배경 색상 변경"
      },
      {
        "command": "opsv-snd-editor.createItalicTag",
        "title": "<i> Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createUnderlineTag",
        "title": "<u> Tag 생성 단축키"
      },
      {
        "command": "opsv-snd-editor.createRadioQuestion",
        "title": "Create Radio Question"
      },
      {
        "command": "opsv-snd-editor.createMultipleAnswerQuestion",
        "title": "Create Multiple Answer Question"
      },
      {
        "command": "opsv-snd-editor.createRankQuestion",
        "title": "Create Rank Question"
      },
      {
        "command": "opsv-snd-editor.createScaleQuestion",
        "title": "Create Scale Question"
      },
      {
        "command": "opsv-snd-editor.createTextQuestion",
        "title": "Create Text Question"
      },
      {
        "command": "opsv-snd-editor.createNumberQuestion",
        "title": "Create Number Question"
      }
    ],
    "keybindings": [
      {
        "command": "opsv-snd-editor.copyForEditor",
        "key": "ctrl+shift+c",
        "when": "editorTextFocus && editorLangId == 'html'"
      },
      {
        "command": "opsv-snd-editor.createLabel",
        "key": "ctrl+1",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createLabelWithValue",
        "key": "ctrl+shift+1",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createOption",
        "key": "ctrl+2",
        "when": "editorTextFocus && editorLangId == 'html'"
      },
      {
        "command": "opsv-snd-editor.createInputTexts",
        "key": "ctrl+t",
        "when": "editorTextFocus && editorLangId == 'html'"
      },
      {
        "command": "opsv-snd-editor.createInputNumbers",
        "key": "ctrl+n",
        "when": "editorTextFocus && editorLangId == 'html'"
      },
      {
        "command": "opsv-snd-editor.createDropdown",
        "key": "ctrl+shift+s",
        "when": "editorTextFocus && editorLangId == 'html'"
      },
      {
        "command": "opsv-snd-editor.createArray",
        "key": "ctrl+shift+a",
        "when": "editorTextFocus && editorLangId == 'javascript'"
      },
      {
        "command": "opsv-snd-editor.createBoldTag",
        "key": "ctrl+b",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createItalicTag",
        "key": "ctrl+i",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createUnderlineTag",
        "key": "ctrl+u",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createSpanColorTag",
        "key": "ctrl+shift+b",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createSpanBgColorTag",
        "key": "ctrl+shift+h",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.changeBoldFontColor",
        "key": "ctrl+alt+b",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.changeBgColor",
        "key": "ctrl+alt+h",
        "when": "editorTextFocus && (editorLangId == 'html' || resourceExtname == '.ipynb')"
      },
      {
        "command": "opsv-snd-editor.createRadioQuestion",
        "key": "ctrl+r",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      },
      {
        "command": "opsv-snd-editor.createMultipleAnswerQuestion",
        "key": "ctrl+m",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      },
      {
        "command": "opsv-snd-editor.createRankQuestion",
        "key": "ctrl+shift+r",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      },
      {
        "command": "opsv-snd-editor.createScaleQuestion",
        "key": "ctrl+shift+s",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      },
      {
        "command": "opsv-snd-editor.createTextQuestion",
        "key": "ctrl+t",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      },
      {
        "command": "opsv-snd-editor.createNumberQuestion",
        "key": "ctrl+n",
        "when": "editorTextFocus && resourceExtname == '.ipynb'"
      }
    ],
    "snippets": [
      {
        "language": "javascript",
        "path": "./javascriptSnippets.code-snippets"
      },
      {
        "language": "html",
        "path": "./htmlSnippets.code-snippets"
      },
      {
        "language": "python",
        "path": "./jupyterSnippets.code-snippets"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "build": "tsc",
    "package": "vsce package && shx mkdir -p version && shx mv opsv-snd-editor*.vsix version/",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.99.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.23.0",
    "shx": "^0.4.0",
    "typescript": "^5.8.2",
    "vsce": "^2.15.0"
  }
}
